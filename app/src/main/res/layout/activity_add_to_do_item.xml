<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddToDoItem">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/creative"
        android:scaleType="centerCrop"

        />

    <TextView
        android:id="@+id/txt_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="28dp"
        android:text="Work Name"
        android:textSize="24sp"
        android:layout_below="@id/img"
        />

    <EditText
        android:id="@+id/work_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/txt_1"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/edt_text"
        android:inputType="text"
        android:paddingStart="8dp"
        android:textSize="22sp"  />


    <TextView
        android:id="@+id/txt_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/work_name"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"
        android:text="Last Date"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/last_date"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/txt_2"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/edt_text"
        android:paddingStart="8dp"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/txt_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/last_date"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"
        android:text="Description"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/edt_work_description"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/txt_5"
        android:layout_marginStart="24dp"
        android:background="@drawable/edt_text"
        android:inputType="text"
        android:paddingStart="8dp"
        android:textSize="18sp"
        android:layout_marginEnd="18dp"
        />


    <Button
        android:id="@+id/bt_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FF5252"
        android:text="Add"
        android:textColor="@color/white"
        android:textSize="22sp" />


</RelativeLayout>